    <div class="jumbotron p-3 p-md-5 text-white rounded"></div>

    <div class="blog container">
      <div class="blog-form">
        <div class="form-container">
          {{#if user}}
          <form method="post" action="/project" class="needs-validation" enctype="multipart/form-data" novalidate>
            <h1 class="poppins-bold">ADD MY PROJECT</h1>
            <div>
              <div class="form-group">
                <label for="input-project-name">Project Name</label>
                <input
                  id="input-project-name"
                  class="form-control"
                  aria-describedby="emailHelp"
                  placeholder="Enter project name"
                  name="projectName"
                  required
                />
                <div class="invalid-feedback">
                  Please provide a project name.
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-lg-6">
                <label for="input-project-startdate">Start Date</label>
                <input
                  type="date"
                  id="input-project-startdate"
                  name="startDate"
                  class="form-control"
                  required
                />
                <div class="invalid-feedback">
                  Please provide a start date.
                </div>
              </div>
              <div class="form-group col-lg-6">
                <label for="input-project-enddate">End Date</label>

                <input
                  type="date"
                  id="input-project-enddate"
                  name="endDate"
                  class="form-control"
                  required
                />
                 <div class="invalid-feedback">
                  Please provide a end date.
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="input-project-description">Description</label>
              <textarea
                class="form-control"
                id="input-project-description"
                name="description"
                required
              ></textarea>
              <div class="invalid-feedback">
                  Please provide a description.
                </div>
            </div>
            <div class="technologies-container">
              <div class="technologies-item">
                <input
                  type="checkbox"
                  id="nodejs"
                  name="nodejs"
                  value="nodejs"
                />
                <label for="nodejs"> Node Js</label>
              </div>

              <div class="technologies-item">
                <input
                  type="checkbox"
                  id="nextjs"
                  name="nextjs"
                  value="nextjs"
                />
                <label for="nextjs">Next Js</label>
              </div>
              <div class="technologies-item">
                <input
                  type="checkbox"
                  id="reactjs"
                  name="reactjs"
                  value="reactjs"
                />
                <label for="reactjs">React Js</label>
              </div>
              <div class="technologies-item">
                <input
                  type="checkbox"
                  id="typescript"
                  name="typescript"
                  value="typescript"
                />
                <label for="typescript">Typescript</label>
              </div>
            </div>
             <div>
                <label>Upload Image</label>
              <div class="form-group">
                <img
                   id="blah"
                  src="./assets/img/pngegg.png"
                  alt="Please select Image"
                  class="img-thumbnail"
                  style="width: 200px;"
                />
              </div>
            </div>
            <div>
                <input
                  class="form-control"
                  type="file"
                  id="imgInp"
                  oninput="updateImage()"
                  name="image"
                  required
                />
                <div class="invalid-feedback">
                  Please provide an image.
                </div>
            </div>

            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-dark w-25">Add</button>
            </div>
          </form>
          {{else}}

            <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="col-md-12 col-lg-12 col-xl-12">
              <div class="card-body d-flex justify-content-center">
                <div>
                  <h3 class="poppins-bold" style="text-align: center">
                    Login Untuk Menambahkan Project
                  </h3>
                  <p class="poppins-regular d-flex justify-content-center">
                    <a href="/login" class="btn btn-dark p-2 mx-2">Login</a> belum punya akun?
                    <a href="/register" class="btn btn-dark p-2 mx-2">Register</a>
                  </p>
                </div>
              </div>
            </div>
          </div>
          {{/if}}
          
        
        </div>
      </div>
      </div>

    </div>

    <script>
      function updateImage() { // Get the value from the input field var
      imageUrl = document.getElementById('imageURL').value; // Set the image URL
      document.getElementById('previewImage').src = imageUrl; }
            imgInp.onchange = evt => {
        const [file] = imgInp.files
        if (file) {
          blah.src = URL.createObjectURL(file)
        }
      }

      // Example starter JavaScript for disabling form submissions if there are invalid fields
(() => {
  'use strict'

  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  const forms = document.querySelectorAll('.needs-validation')

  // Loop over them and prevent submission
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }

      form.classList.add('was-validated')
    }, false)
  })
})()
    </script>

